@using OnlineTicariOtomasyon.Models.Siniflar
@model List<Faturalar>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<style>
    .table-container {
        margin-top: 20px;
        max-width: 100%; /* Tablonun konteynerine göre genişlemesi */
        overflow-x: auto; /* Mobil için kaydırma çubuğu*/
    }

    .table-bordered {
        border-collapse: collapse;
        width: 100%;
        border: 1px solid #ddd;
        margin-bottom: 20px;
        background-color: white;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1); /* Gölgelendirme */
        border-radius: 8px;
    }

        .table-bordered th, .table-bordered td {
            padding: 12px;
            border: 1px solid #ddd;
            text-align: left;
        }

        .table-bordered th {
            background-color: #f2f2f2;
            font-weight: bold;
            text-transform: uppercase; /* Daha okunaklı başlıklar*/
        }

        .table-bordered tbody tr:hover {
            background-color: #f9f9f9; /* Hover efekti*/
        }

        .table-bordered button {
            border: none;
            padding: 8px 12px;
            margin: 2px;
            border-radius: 4px;
            cursor: pointer;
            transition: background-color 0.3s; /* Geçiş animasyonu */
            color: white;
        }

            .table-bordered button.delete {
                background-color: #dc3545;
            }

                .table-bordered button.delete:hover {
                    background-color: #c82333;
                }

            .table-bordered button.update {
                background-color: #28a745;
            }

                .table-bordered button.update:hover {
                    background-color: #218838;
                }

    .add-button {
        padding: 10px 15px;
        background-color: #007bff;
        color: white;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        margin-bottom: 20px; /* Alt boşluk */
    }

        .add-button:hover {
            background-color: #0056b3;
        }
</style>
<div class="table-container">
    <table class="table table-bordered" style="margin-top:20px">
        <tr>
            <th>SERİ SIRA NO</th>
            <th>TARİH</th>
            <th>SAAT</th>
            <th>TOPLAM</th>
            <th>GÜNCELLE</th>
            <th>DETAYLAR</th>
            <th>YENİ KALEM</th>
        </tr>
        @foreach (var k in Model)
        {
            <tr>
                <td>@k.FaturaSeriNo @k.FaturaSiraNo</td>
                <td>@k.Tarih</td>
                <td>@k.Saat</td>
                <td>@k.Toplam</td>
                <td><a href="/Fatura/FaturaGetir/@k.Faturaid" class="btn btn-success">Güncelle</a></td>
                <td><a href="/Fatura/FaturaDetay/@k.Faturaid" class="btn btn-default" style="background-color:lightcoral; color:white">Detaylar</a></td>
                <td><a href="/Fatura/FaturaDetay/@k.Faturaid" class="btn btn-default" style="background-color:thistle; color:white">Kalem</a></td>
            </tr>
        }
    </table>
</div>
<br />
<a href="/Fatura/FaturaEkle/" class="btn btn-primary">Yeni Fatura Oluştur</a>
<br />
<br />
<button type="button" class="btn btn-warning" style="background-color:#d95151; color:white" data-toggle="modal" data-target="#Modal1">Popup Penceresi</button>

<div class="modal" id="Modal1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">Popup Diyalog Ekranı</h2>
            </div>
            <div class="modal-body">
                <table class="table table-bordered">
                    <tr>
                        <td>Seri No</td>
                        <td>Sıra No</td>
                        <td>Tutar</td>
                    </tr>
                    @foreach (var x in Model)
                    {
                        <tr>
                            <td>@x.FaturaSeriNo</td>
                            <td>@x.FaturaSiraNo</td>
                            <td>@x.Toplam</td>
                        </tr>
                    }
                </table>
                <button type="button" class="btn btn-danger" data-dismiss="modal">Tamam</button>
            </div>
        </div>
    </div>
</div>

