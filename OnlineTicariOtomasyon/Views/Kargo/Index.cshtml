@using OnlineTicariOtomasyon.Models.Siniflar
@model List<KargoDetay>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<style>
    .table-container {
        margin-top: 20px;
        max-width: 100%; /* Tablonun konteynerine göre genişlemesi */
        overflow-x: auto; /* Mobil için kaydırma çubuğu*/
    }

    .table-bordered {
        border-collapse: collapse;
        width: 100%;
        border: 1px solid #ddd;
        margin-bottom: 20px;
        background-color: white;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1); /* Gölgelendirme */
        border-radius: 8px;
    }

        .table-bordered th, .table-bordered td {
            padding: 12px;
            border: 1px solid #ddd;
            text-align: left;
        }

        .table-bordered th {
            background-color: #f2f2f2;
            font-weight: bold;
            text-transform: uppercase; /* Daha okunaklı başlıklar*/
        }

        .table-bordered tbody tr:hover {
            background-color: #f9f9f9; /* Hover efekti*/
        }

        .table-bordered button {
            border: none;
            padding: 8px 12px;
            margin: 2px;
            border-radius: 4px;
            cursor: pointer;
            transition: background-color 0.3s; /* Geçiş animasyonu */
            color: white;
        }

            .table-bordered button.delete {
                background-color: #dc3545;
            }

                .table-bordered button.delete:hover {
                    background-color: #c82333;
                }

            .table-bordered button.update {
                background-color: #28a745;
            }

                .table-bordered button.update:hover {
                    background-color: #218838;
                }

    .add-button {
        padding: 10px 15px;
        background-color: #007bff;
        color: white;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        margin-bottom: 20px; /* Alt boşluk */
    }

        .add-button:hover {
            background-color: #0056b3;
        }

    .new-form-class {
        margin-top: 10px;
        padding: 10px;
        border: 1px solid #ddd;
        border-radius: 8px;
        background-color: #f9f9f9;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1); /* Gölgelendirme */
    }

        .new-form-class input[type="text"] {
            padding: 10px;
            border: 1px solid #ddd;
            border-radius: 4px;
            width: calc(100% - 22px); /* Tam genişlik */
            margin-bottom: 10px;
        }

        .new-form-class input[type="submit"] {
            padding: 10px 15px;
            background-color: #007bff;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

            .new-form-class input[type="submit"]:hover {
                background-color: #0056b3;
            }

    .form-inline p {
        display: inline-block;
        margin-right: 10px;
        margin-bottom: 0; /* Alt boşluk sıfırlandı */
    }

    .form-inline input[type="text"] {
        display: inline-block;
        width: auto;
        margin-bottom: 0; /* Alt boşluk sıfırlandı */
    }

    .form-inline input[type="submit"] {
        display: inline-block;
        margin-bottom: 0; /* Alt boşluk sıfırlandı */
    }
</style>
<br />
@using (Html.BeginForm("Index", "Kargo", FormMethod.Get, new { @class = "new-form-class form-inline" }))
{
    <p>
        Kargo Takip Numarası: @Html.TextBox("p")
        <input type="submit" value="Ara" />
    </p>
}
<div class="table-container">
    <table class="table table-bordered" style="margin-top:20px">
        <tr>
            <th>TAKİP KODU</th>
            <th>PERSONEL</th>
            <th>ALICI</th>
            <th>TARİH</th>
            <th>DETAYLAR</th>
            <th>QR</th>
        </tr>
        @foreach (var k in Model)
        {
            <tr>
                <td>@k.TakipKodu</td>
                <td>@k.Personel</td>
                <td>@k.Alici</td>
                <td>@k.Tarih</td>
                <td><a href="/Kargo/KargoTakip/@k.TakipKodu" class="btn btn-default" style="background-color:lightcoral; color:white">Detaylar</a></td>
                <td><a href="/Kargo/Karekod/@k.KargoDetayid" class="btn btn-default" style="background-color:darkblue; color:white">QR</a></td>
            </tr>
        }
    </table>
</div>
<a href="/Kargo/YeniKargo" class="btn btn-primary">Yeni Kargo Girişi</a>


